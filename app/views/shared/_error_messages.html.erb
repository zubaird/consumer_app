<% if awesomeobject.errors.any? %> 
  <div id="error_explanation">
    <div class="alert alert-error">
      Sorry, please fix the following <%= pluralize(awesomeobject.errors.count, "form error") %>.
    </div>
    <ul>
    <% awesomeobject.errors.full_messages.each do |msg| %>
      <li>*<%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>